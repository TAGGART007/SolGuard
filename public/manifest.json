{
    "name": "SolGuard",
    "manifest_version": 3,
    "version": "1.0",
    "description": "SolGuard is a browser extension that protects you from phishing attacks on Solana.",
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}